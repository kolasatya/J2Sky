<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1695A3"
    tools:context=".ResetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textview_Title_Skin"
            android:text="Reset Password" />


        <EditText
            android:id="@+id/editText_rest_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="email"
            android:inputType="textEmailAddress"
            />


        <EditText
            android:id="@+id/editText_reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            />
        <EditText
            android:id="@+id/editText_reset_re_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="retype password"
            android:inputType="textPassword"
            />
        <EditText
            android:id="@+id/editText_reset_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="otp"
            android:inputType="number"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_reset_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/btnlogin"
            android:text="OTP" />

        <Button
            android:id="@+id/button_reset_registeruser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            style="@style/btnlogin"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_reset_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/btncancel"
            android:text="Cancel" />


    </LinearLayout>
</RelativeLayout>